{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "postcss.config.js",
    "tsconfig.json",
    "tailwind.config.js"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "public/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
